<UserControl x:Class="centre_soutien.Views.GestionEtudiantsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:centre_soutien.Views"
             xmlns:viewModels="clr-namespace:centre_soutien.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="900"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- Styles communs (identique aux autres interfaces) -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="Margin" Value="0 5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Background" Value="#FF3A4F7A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="3" ShadowDepth="1" Color="#40000000"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF4A6FA5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Style pour le DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="Margin" Value="0 0 0 15"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF3A4F7A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10 5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Resources>

    <d:UserControl.DataContext>
        <viewModels:EtudiantViewModel/>
    </d:UserControl.DataContext>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <TextBlock Grid.Row="0" Text="Gestion des Étudiants" 
                   FontSize="24" FontWeight="SemiBold" Margin="0 0 0 15"
                   Foreground="#FF3A4F7A">
            <TextBlock.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#20000000"/>
            </TextBlock.Effect>
        </TextBlock>

        <!-- DataGrid -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Etudiants}"
                  SelectedItem="{Binding SelectedEtudiant, Mode=TwoWay}"
                  AutoGenerateColumns="False" IsReadOnly="True"
                  CanUserAddRows="False" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IDEtudiant}" Width="Auto"/>
                <DataGridTextColumn Header="Nom" Binding="{Binding Nom}" Width="*"/>
                <DataGridTextColumn Header="Prénom" Binding="{Binding Prenom}" Width="*"/>
                <DataGridTextColumn Header="Date Naiss." Binding="{Binding DateNaissance}" Width="Auto"/>
                <DataGridTextColumn Header="Téléphone" Binding="{Binding Telephone}" Width="Auto"/>
                <DataGridTextColumn Header="Lycée" Binding="{Binding Lycee}" Width="*"/>
                <DataGridTextColumn Header="Adresse" Binding="{Binding Adresse}" Width="2*"/>
                <DataGridTextColumn Header="Notes" Binding="{Binding Notes}" Width="2*"/>
                <DataGridTextColumn Header="Inscrit le" Binding="{Binding DateInscriptionSysteme}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="Archivé" Binding="{Binding EstArchive}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Formulaire -->
        <Border Grid.Row="2" BorderThickness="0" CornerRadius="5" Margin="0 0 0 15"
                Background="White">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="1" Color="#20000000"/>
            </Border.Effect>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/> <!-- Labels -->
                    <ColumnDefinition Width="*"/>    <!-- TextBoxes -->
                    <ColumnDefinition Width="Auto"/>  <!-- Boutons -->
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Nom -->
                    <RowDefinition Height="Auto"/> <!-- Prénom -->
                    <RowDefinition Height="Auto"/> <!-- Date Naissance -->
                    <RowDefinition Height="Auto"/> <!-- Adresse -->
                    <RowDefinition Height="Auto"/> <!-- Téléphone -->
                    <RowDefinition Height="Auto"/> <!-- Lycée -->
                    <RowDefinition Height="Auto"/> <!-- Notes -->
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="Nom:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding NomInput, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="1" Grid.Column="0" Content="Prénom:"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PrenomInput, UpdateSourceTrigger=PropertyChanged}"/>

                <Label Grid.Row="2" Grid.Column="0" Content="Date Naissance:"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding DateNaissanceInput, UpdateSourceTrigger=PropertyChanged}" ToolTip="Format YYYY-MM-DD"/>
                
                <Label Grid.Row="3" Grid.Column="0" Content="Adresse:"/>
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding AdresseInput, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" AcceptsReturn="True" MinLines="2"/>
                
                <Label Grid.Row="4" Grid.Column="0" Content="Téléphone:"/>
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding TelephoneInput, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Label Grid.Row="5" Grid.Column="0" Content="Lycée:"/>
                <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding LyceeInput, UpdateSourceTrigger=PropertyChanged}"/>
                
                <Label Grid.Row="6" Grid.Column="0" Content="Notes:"/>
                <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding NotesInput, UpdateSourceTrigger=PropertyChanged}" 
                         TextWrapping="Wrap" AcceptsReturn="True" MinLines="2"/>

                <!-- Boutons d'action -->
                <StackPanel Grid.Row="0" Grid.RowSpan="7" Grid.Column="2" Orientation="Vertical" 
                            Margin="15 0 0 0" VerticalAlignment="Top">
                    <Button Content="Ajouter" Command="{Binding AddEtudiantCommand}"/>
                    <Button Content="Modifier" Command="{Binding UpdateEtudiantCommand}"/>
                    <Button Content="Archiver" Command="{Binding ArchiveEtudiantCommand}"/>
                    <Button Content="Nouveau/Vider" Command="{Binding ClearFormCommand}" Margin="0 15 0 0"
                            BorderBrush="#FF3A4F7A" BorderThickness="1" 
                            Foreground="#FF3A4F7A" Background="Transparent"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Barre de statut -->
        <StatusBar Grid.Row="3" Background="#FF3A4F7A" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>