<UserControl x:Class="centre_soutien.Views.GestionPaiementsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converters="clr-namespace:centre_soutien.Converters"
             xmlns:viewModels="clr-namespace:centre_soutien.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- Gradient Brushes pour un look moderne -->
        <LinearGradientBrush x:Key="PrimaryGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="SuccessGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#48bb78" Offset="0"/>
            <GradientStop Color="#38a169" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="DangerGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#f56565" Offset="0"/>
            <GradientStop Color="#e53e3e" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="WarningGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#ed8936" Offset="0"/>
            <GradientStop Color="#dd6b20" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="InfoGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4299e1" Offset="0"/>
            <GradientStop Color="#3182ce" Offset="1"/>
        </LinearGradientBrush>

        <!-- Style pour bouton principal -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="16 10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8"
                                x:Name="border">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="6" ShadowDepth="2" Color="#40000000" Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#7c8df0" Offset="0"/>
                                            <GradientStop Color="#8a5fb8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#a0adb8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style pour bouton secondaire -->
        <Style x:Key="SecondaryButton" TargetType="Button">
            <Setter Property="Padding" Value="12 8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#4a5568"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e2e8f0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                x:Name="border">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#f7fafc"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryGradient}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style moderne pour les TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10 8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e6ed"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinHeight" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                x:Name="border">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="2"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryGradient}"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style moderne pour ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10 8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e6ed"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinHeight" Value="35"/>
        </Style>

        <!-- Style moderne pour DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e6ed"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="MinHeight" Value="35"/>
        </Style>

        <!-- Style moderne pour Labels -->
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#4a5568"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <!-- Style moderne pour DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#fafbfc"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="RowHeight" Value="40"/>
        </Style>

        <!-- Style moderne pour les en-têtes DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource PrimaryGradient}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10 8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Height" Value="35"/>
        </Style>

        <!-- Convertisseurs -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
    </UserControl.Resources>

    <d:UserControl.DataContext>
        <viewModels:PaiementViewModel/>
    </d:UserControl.DataContext>

    <Grid Loaded="UserControl_Loaded">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity="0.03">
                <GradientStop Color="#667eea" Offset="0"/>
                <GradientStop Color="#764ba2" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- En-tête moderne -->
            <Border Grid.Row="0" Background="White" CornerRadius="12" Margin="0 0 0 20" Padding="25 20">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#20000000" Opacity="0.2"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource PrimaryGradient}" 
                            Width="50" Height="50" 
                            CornerRadius="25" 
                            Margin="0 0 20 0">
                        <TextBlock Text="💰" FontSize="24" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Gestion des Paiements" 
                                   FontSize="26" FontWeight="Bold" 
                                   Foreground="#2d3748"/>
                        <TextBlock Text="Enregistrez et suivez les paiements des étudiants" 
                                   FontSize="14" 
                                   Foreground="#718096" 
                                   Margin="0 4 0 0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Contenu principal avec layout à 3 colonnes -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Panel gauche - Sélection étudiant et statistiques -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Sélection étudiant -->
                    <Border Grid.Row="0" Background="White" CornerRadius="12" Padding="20" Margin="0 0 0 15">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#20000000" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                <Border Background="{StaticResource InfoGradient}" 
                                        Width="25" Height="25" 
                                        CornerRadius="12" 
                                        Margin="0 0 10 0">
                                    <TextBlock Text="👤" FontSize="12" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Sélection Étudiant" 
                                           FontSize="16" FontWeight="Bold" 
                                           Foreground="#2d3748" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ComboBox ItemsSource="{Binding AllEtudiants}"
                                      SelectedItem="{Binding SelectedEtudiant, Mode=TwoWay}"
                                      DisplayMemberPath="NomComplet"
                                      SelectionChanged="EtudiantComboBox_SelectionChanged"
                                      Margin="0"/>
                        </StackPanel>
                    </Border>

                    <!-- Statistiques étudiant -->
                    <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="0 15 0 0"
                            Visibility="{Binding StatistiquesEtudiant, Converter={StaticResource StringToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#20000000" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 15">
                                <Border Background="{StaticResource SuccessGradient}" 
                                        Width="25" Height="25" 
                                        CornerRadius="12" 
                                        Margin="0 0 10 0">
                                    <TextBlock Text="📊" FontSize="12" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Statistiques" 
                                           FontSize="14" FontWeight="Bold" 
                                           Foreground="#2d3748" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Total payé:" FontSize="11" Foreground="#718096"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding StatistiquesEtudiant.TotalPaye, StringFormat=C}" 
                                           FontSize="11" FontWeight="Bold" Foreground="#38a169"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre paiements:" FontSize="11" Foreground="#718096"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding StatistiquesEtudiant.NombrePaiements}" 
                                           FontSize="11" FontWeight="Bold"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="En retard:" FontSize="11" Foreground="#718096"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding StatistiquesEtudiant.MontantEnRetard, StringFormat=C}" 
                                           FontSize="11" FontWeight="Bold" Foreground="#e53e3e"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Statut:" FontSize="11" Foreground="#718096"/>
                                <Border Grid.Row="3" Grid.Column="1" CornerRadius="8" Padding="6 2" 
                                        Background="{Binding StatistiquesEtudiant.EstAJour, Converter={StaticResource BooleanToColorConverter}}">
                                    <TextBlock Text="{Binding StatistiquesEtudiant.EstAJour, Converter={StaticResource BooleanToStatusConverter}}" 
                                               FontSize="9" FontWeight="Bold" Foreground="White"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Historique des paiements -->
                    <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="15" Margin="0 15 0 0"
                            Visibility="{Binding SelectedEtudiant, Converter={StaticResource StringToVisibilityConverter}}">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="8" ShadowDepth="2" Color="#20000000" Opacity="0.15"/>
                        </Border.Effect>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                                <Border Background="{StaticResource WarningGradient}" 
                                        Width="20" Height="20" 
                                        CornerRadius="10" 
                                        Margin="0 0 8 0">
                                    <TextBlock Text="📜" FontSize="10" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center"/>
                                </Border>
                                <TextBlock Text="Historique" 
                                           FontSize="13" FontWeight="Bold" 
                                           Foreground="#2d3748" 
                                           VerticalAlignment="Center"/>
                                <Button Content="🔄" Background="Transparent" BorderThickness="0" 
                                        Command="{Binding LoadHistoriqueCommand}" 
                                        Margin="5 0 0 0" Cursor="Hand"/>
                            </StackPanel>
                            
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                                <ItemsControl ItemsSource="{Binding HistoriquePaiements}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="#e2e8f0" BorderThickness="0 0 0 1" Padding="5" Margin="0 2"
                                                    MouseLeftButtonDown="HistoriquePaiement_MouseDoubleClick"
                                                    Cursor="Hand"
                                                    Background="Transparent">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="Transparent"/>
                                                        <Style.Triggers>
                                                            <Trigger Property="IsMouseOver" Value="True">
                                                                <Setter Property="Background" Value="#f7fafc"/>
                                                            </Trigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding DatePaiement}" 
                                                               FontSize="11" FontWeight="SemiBold"/>
                                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MontantTotalRecuTransaction, StringFormat=C}" 
                                                               FontSize="11" FontWeight="Bold" Foreground="#38a169"/>
                                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                               Text="{Binding Notes}" FontSize="10" Foreground="#718096" 
                                                               TextTrimming="CharacterEllipsis"/>
                                                    <Button Grid.Row="2" Grid.Column="1" Content="🗑️" 
                                                            Style="{StaticResource SecondaryButton}"
                                                            Command="{Binding DataContext.SupprimerPaiementCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding}"
                                                            Margin="0 5 0 0" Padding="5" FontSize="8"
                                                            ToolTip="Supprimer ce paiement"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Panel central - Échéances -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="2">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#20000000" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <!-- Header échéances -->
                        <Border Grid.Row="0" Background="{StaticResource PrimaryGradient}" Padding="15 10" CornerRadius="12 12 0 0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📅" FontSize="16" Margin="0 0 10 0"/>
                                <TextBlock Text="Échéances de l'étudiant" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <Button Content="💰" Background="Transparent" BorderThickness="0" 
                                        Command="{Binding CalculerMontantAutoCommand}"
                                        Foreground="White" Margin="10 0 0 0" Cursor="Hand"
                                        ToolTip="Calculer automatiquement le montant"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- DataGrid échéances -->
                        <DataGrid Grid.Row="1" ItemsSource="{Binding EcheancesEtudiant}"
                                  AutoGenerateColumns="False" IsReadOnly="False"
                                  CanUserAddRows="False" CanUserDeleteRows="False"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                            <DataGrid.Columns>
                                <!-- Case à cocher -->
                                <DataGridTemplateColumn Header="✓" Width="40">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding EstSelectionne, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                      HorizontalAlignment="Center" 
                                                      Checked="EcheanceCheckBox_Changed"
                                                      Unchecked="EcheanceCheckBox_Changed"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Inscription/Groupe -->
                                <DataGridTextColumn Header="Inscription" 
                                                    Binding="{Binding InscriptionDisplay}" 
                                                    Width="200"
                                                    IsReadOnly="True"/>

                                <!-- Mois concerné -->
                                <DataGridTextColumn Header="Période" 
                                                    Binding="{Binding EcheanceInfo.MoisConcerne}" 
                                                    Width="80"
                                                    IsReadOnly="True"/>

                                <!-- Date échéance -->
                                <DataGridTextColumn Header="Échéance" 
                                                    Binding="{Binding EcheanceInfo.DateEcheance, StringFormat=dd/MM/yyyy}" 
                                                    Width="90"
                                                    IsReadOnly="True"/>

                                <!-- Montant dû -->
                                <DataGridTextColumn Header="Montant Dû" 
                                                    Binding="{Binding MontantDuFormate}" 
                                                    Width="100"
                                                    IsReadOnly="True"/>

                                <!-- Montant payé -->
                                <DataGridTextColumn Header="Déjà Payé" 
                                                    Binding="{Binding MontantPayeFormate}" 
                                                    Width="100"
                                                    IsReadOnly="True"/>

                                <!-- Montant restant -->
                                <DataGridTextColumn Header="Restant" 
                                                    Binding="{Binding MontantRestantFormate}" 
                                                    Width="100"
                                                    IsReadOnly="True"/>

                                <!-- Montant à payer (modifiable) -->
                                <DataGridTemplateColumn Header="À Payer" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Text="{Binding MontantAPayer, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                                     Margin="2" Padding="5"
                                                     IsEnabled="{Binding EstSelectionne}"
                                                     TextChanged="MontantAPayer_TextChanged"
                                                     PreviewTextInput="MontantTextBox_PreviewTextInput"
                                                     KeyDown="MontantTextBox_KeyDown"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>

                                <!-- Statut -->
                                <DataGridTemplateColumn Header="Statut" Width="80">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="10" Padding="5 2" HorizontalAlignment="Center"
                                                    Background="{Binding CouleurStatut}">
                                                <TextBlock Text="{Binding StatutDisplay}" 
                                                           FontSize="9" FontWeight="Bold" 
                                                           Foreground="White" 
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </Border>

                <!-- Panel droit - Nouveau paiement -->
                <Border Grid.Column="4" Background="White" CornerRadius="12" Padding="20">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="3" Color="#20000000" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Header nouveau paiement -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 20">
                            <Border Background="{StaticResource SuccessGradient}" 
                                    Width="30" Height="30" 
                                    CornerRadius="15" 
                                    Margin="0 0 10 0">
                                <TextBlock Text="💳" FontSize="14" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="Nouveau Paiement" 
                                       FontSize="18" FontWeight="Bold" 
                                       Foreground="#2d3748" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Formulaire paiement -->
                        <StackPanel Grid.Row="1" Margin="0 10 0 0">
                            <!-- Date de paiement -->
                            <Label Content="Date de paiement"/>
                            <DatePicker SelectedDate="{Binding DatePaiement, Mode=TwoWay}"/>

                            <!-- Montant total -->
                            <Label Content="Montant total"/>
                            <Border BorderBrush="{StaticResource PrimaryGradient}" BorderThickness="2" CornerRadius="6" Margin="5">
                                <TextBox Text="{Binding MontantTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                         FontSize="16" FontWeight="Bold" 
                                         Background="#f8fafc" BorderThickness="0"
                                         PreviewTextInput="MontantTextBox_PreviewTextInput"
                                         KeyDown="MontantTextBox_KeyDown"/>
                            </Border>
                            <TextBlock Text="{Binding MontantTotalFormate}" 
                                       FontSize="12" Foreground="#38a169" 
                                       FontWeight="Bold" Margin="10 0 0 5"/>

                            <!-- Notes -->
                            <Label Content="Notes (optionnel)"/>
                            <TextBox Text="{Binding NotesPaiement, Mode=TwoWay}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60" MaxHeight="100"
                                     VerticalScrollBarVisibility="Auto"/>

                            <!-- Récapitulatif -->
                            <Border Background="#f8fafc" CornerRadius="8" Padding="15" Margin="0 15 0 0"
                                    Visibility="{Binding SelectedEtudiant, Converter={StaticResource StringToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="📋 Récapitulatif" FontSize="14" FontWeight="Bold" 
                                               Foreground="#4a5568" Margin="0 0 0 10"/>
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Échéances sélectionnées:" 
                                                   FontSize="11" Foreground="#718096"/>
                                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                                   FontSize="11" FontWeight="Bold">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0}">
                                                    <Binding Path="EcheancesEtudiant" Converter="{StaticResource CountSelectedEcheancesConverter}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Montant calculé:" 
                                                   FontSize="11" Foreground="#718096"/>
                                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                                   FontSize="11" FontWeight="Bold" Foreground="#4299e1">
                                            <TextBlock.Text>
                                                <MultiBinding StringFormat="{}{0:C}">
                                                    <Binding Path="EcheancesEtudiant" Converter="{StaticResource SumSelectedEcheancesConverter}"/>
                                                </MultiBinding>
                                            </TextBlock.Text>
                                        </TextBlock>

                                        <Rectangle Grid.Row="2" Grid.ColumnSpan="2" Height="1" 
                                                   Fill="#e2e8f0" Margin="0 5"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Boutons d'action -->
                        <StackPanel Grid.Row="2" Margin="0 20 0 0">
                            <!-- Bouton principal -->
                            <Button Content="💾 Enregistrer le Paiement" 
                                    Style="{StaticResource PrimaryButton}"
                                    Command="{Binding EnregistrerPaiementCommand}"
                                    FontSize="14" Padding="15 12"/>

                            <!-- Boutons secondaires -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                                <Button Content="🔄 Recalculer" 
                                        Style="{StaticResource SecondaryButton}"
                                        Command="{Binding CalculerMontantAutoCommand}"
                                        Margin="0 0 5 0"/>
                                
                                <Button Content="🗑️ Effacer" 
                                        Style="{StaticResource SecondaryButton}"
                                        Click="ResetFormulaire_Click"
                                        Margin="5 0 0 0"/>
                            </StackPanel>

                            <!-- Zone de validation -->
                            <Border Background="#fff5f5" BorderBrush="#fed7d7" BorderThickness="1" 
                                    CornerRadius="6" Padding="10" Margin="0 15 0 0"
                                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ℹ️" FontSize="14" Margin="0 0 8 0"/>
                                    <TextBlock Text="{Binding StatusMessage}" 
                                               FontSize="12" Foreground="#c53030" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>

            <!-- Barre de statut -->
            <Border Grid.Row="2" Background="White" CornerRadius="8" Padding="15 10" Margin="0 20 0 0"
                    Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="5" ShadowDepth="1" Color="#20000000" Opacity="0.1"/>
                </Border.Effect>
                <StackPanel Orientation="Horizontal">
                    <Border Background="{StaticResource InfoGradient}" 
                            Width="20" Height="20" 
                            CornerRadius="10" 
                            Margin="0 0 10 0">
                        <TextBlock Text="ℹ️" FontSize="10" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="13" Foreground="#4a5568" 
                               VerticalAlignment="Center"/>
                    
                    <!-- Indicateur de chargement -->
                    <Border Background="Transparent" Margin="15 0 0 0"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⏳" FontSize="12" Margin="0 0 5 0"/>
                            <TextBlock Text="Chargement..." FontSize="11" Foreground="#718096"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>